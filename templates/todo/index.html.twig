{% extends 'base.html.twig' %}

{% block title %}Todo list{% endblock %}

{% block body %}
    <h1>Todo list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Todo</th>
                <th>By</th>
                <th class="text-end">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            {% if todo.isdone == false %}
                <tr>
                    <td>{{ todo.id }}</td>
                    <td>{{ todo.todo }}</td>
                    <td>{{ todo.by }}</td>
                    <td class="text-end">
                        <a class="me-3" href="{{ path('app_todo_show', {'id': todo.id}) }}" title="Show"><i stu class="bi bi-eye-fill"></i></a>
                        {% if is_granted("ROLE_ADMIN") %}
                            <a class="me-3" href="{{ path('app_todo_edit', {'id': todo.id}) }}" title="Edit"><i class="bi bi-pencil-fill"></i></a>
                            {{ include('todo/_delete_form.html.twig') }}
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3>Done</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Todo</th>
                <th>By</th>
                <th class="text-end">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            {% if todo.isdone %}
                <tr>
                    <td>{{ todo.id }}</td>
                    <td>{{ todo.todo }}</td>
                    <td>{{ todo.by }}</td>
                    <td class="text-end">
                        <a class="me-3" href="{{ path('app_todo_show', {'id': todo.id}) }}"><i class="bi bi-eye-fill"></i></a>
                        {% if is_granted("ROLE_ADMIN") %}
                            <a class="me-3" href="{{ path('app_todo_edit', {'id': todo.id}) }}"><i class="bi bi-pencil-fill"></i></a>
                            {{ include('todo/_delete_form.html.twig') }}
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        {% if is_granted("ROLE_ADMIN") %}
            <a class="btn btn-success" style="position: fixed;bottom: 60px;left: 20px;" href="{{ path('app_todo_new') }}">Create new</a>
        {% endif %}
{% endblock %}
