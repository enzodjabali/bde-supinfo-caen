<form class="d-inline-block" method="post" action="{{ path('app_todo_delete', {'id': todo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
    {% if app.request.get('_route') == 'app_todo_index' %}
    <button class="btn btn-danger btn-sm rounded-circle" title="Delete">
        <i class="bi bi-trash-fill"></i>
    </button>
    {% else %}
    <button class="btn btn-danger" title="Delete">
       Delete
    </button>
    {% endif %}
</form>
